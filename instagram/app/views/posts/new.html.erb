    <%=label_tag(:post_title, "title")%>
    <%= text_field_tag("post[title]","",class: "form-control")%> <hr />
  </div>
  <div class ="form-group">
    <%=label_tag(:post_username, "username")%>
    <!-- <%= text_field_tag("post[username]","#{current_user.username}",class: "form-control")%> <hr /> -->
      
  </div>
  <div class ="form-group">
    <%=label_tag(:post_content, "content")%>
    <%= text_area_tag("post[content]","",class: "form-control") %> <hr />
  </div>
  <div class ="form-group">
    <%=label_tag(:post_postimage, "attachedfile")%>
    <%= file_field_tag("post[postimage]", class: "form-control")%><hr />
    <!-- <%= submit_tag %> -->
    <%=button_tag("submit",class:"btn btn-info")%>
  </div>

<% end %>
