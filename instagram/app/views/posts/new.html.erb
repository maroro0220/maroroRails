<%= form_tag("/posts", method: "post", multipart: true) do %>
  <!-- <% text_field_tag("post[title]")%> <hr />
  <%= text_area_tag("post[content]") %> <hr />
  <%= file_field_tag("post[postimage]") %><hr />
